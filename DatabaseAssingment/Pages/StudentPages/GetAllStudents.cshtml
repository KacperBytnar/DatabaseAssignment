@page
@model DatabaseAssingment.Pages.StudentPages.GetAllStudentsModel
@{
}
<h3 style="text-align: center; font-family: 'Comic Sans MS'; font-size: 32px;">
    <a class="btn-dark" asp-area="" asp-page="/StudentPages/StudentWaitingList">Waiting List</a>
</h3>

<table class="table">
    <thead>
        <tr>
            <th>  Student Number  </th>
            <th>  Name  </th>
            <th>  Addres </th>
            <th>  Has a room?</th>
            <th>  Registration Date </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
        <tr>
            <td>
                @item.Student_No
            </td>
            <td>
                @item.SName
            </td>
            <td>
                @item.SAddress
            </td>
            <td>
                @item.Has_Room
            </td>
            <td>
                @item.RegistrationDate
            </td>
            <td>
                <a asp-page="/RentPages/StudentLeasings" asp-route-id="@item.Student_No" class="nav-link">Display Rents</a>
            </td>
        </tr>
        }
    </tbody>
</table>