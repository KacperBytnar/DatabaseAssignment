@page
@model DatabaseAssingment.Pages.Apartment.GetAllApartmentsModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>  Apartment Number   </th>
            <th>    Address  </th>
            <th>  Type  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Apartments)
        {
            <tr>
                <td>
                    @item.Apartment_No
                </td>
                <td>
                    <a asp-page="/RoomPages/SelectedRooms" asp-route-id="@item.Apartment_No"  asp-route-type="apart" class="nav-link">@item.Address</a>
                </td>
                <td>
                    @item.Types
                </td>
            </tr>
        }
    </tbody>
</table>
